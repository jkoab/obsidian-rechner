{
	"name": "obsidian-rechner-plugin",
	"version": "0.2.0",
	"description": "Obsidian frontend for WebAssembly based calculator engines",
	"main": "main.js",
	"scripts": {
		"wasm": "wasm-pack build --target=web ./kernels/numbat-kernel --release",
		"dev": "NODE_ENV=development vite build --mode development --watch",
		"build": "tsc -noEmit -skipLibCheck && vite build --mode production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"tag": "node tag.mjs",
		"lint": "eslint --ext .js,.ts,.json src && stylelint styles.css && npx npm-package-json-lint ."
	},
	"type": "module",
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^18.0.0",
		"builtin-modules": "3.3.0",
		"eslint-plugin-obsidianmd": "^0.0.2",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4",
		"eslint": "8.56.0",
		"typescript-eslint": "7.1.0"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.7",
		"tailwindcss": "^4.1.7",
		"vite": "^6.3.5",
		"vite-plugin-wasm-pack": "^0.1.12",
		"wasm-pack": "^0.13.1"
	}
}
