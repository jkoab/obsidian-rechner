{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"useUnknownInCatchVariables": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"paths": {
			"@numbat-kernel/*": ["./kernels/numbat-kernel/pkg/*"]
		}
	},
	"include": ["src/**/*"]
}
